<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.home.jsquad.knowhunt.android.activities.Camera"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context=".android.activities.Camera"
        android:weightSum="1"
        android:background="@color/black">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="It seems, that your friends had already been here:)"
            android:textAlignment="center"
            android:textAppearance="@style/TextLabel"
            android:textColor="#f6feff"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button"
            style="@style/ovalButton_style"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_toEndOf="@+id/img"
            android:layout_toRightOf="@+id/img"
            android:fontFamily="sans-serif"
            android:onClick="click"
            android:text="Accept challenge of making a better picture"
            android:textColor="#f6feff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:src="@drawable/team"
            android:layout_weight="0.42" />


        <Button
            android:id="@+id/button1"
            style="@style/ovalButton_style"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_toEndOf="@+id/img"
            android:layout_toRightOf="@+id/img"
            android:fontFamily="sans-serif"
            android:onClick="onDoneButtonClicked"
            android:text="Done! :)"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>