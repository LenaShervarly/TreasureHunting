<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_centerVertical="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_weight="10">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:src="@drawable/trophy" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="250dp" />
    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_marginTop="250dp"
        android:id="@+id/tableLayout">
        <TableRow
            android:layout_margin="1dp"
            >
            <EditText
                android:id="@+id/sName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFF"
                android:text="Name"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/sScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFF"
                android:text="Score"
                android:textSize="20dp" />

        </TableRow>
        <TableRow
            android:layout_margin="1dp" >

            <EditText
                android:id="@+id/sfirstName"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFF"
                android:hint="first name"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/sfirstScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFF"
                android:hint="first Score"
                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_margin="1dp">
            <EditText
                android:id="@+id/ssecondName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFF"
                android:hint="secondName"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ssecondScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFF"
                android:hint="secondScore"
                android:textSize="20dp" />

        </TableRow>

    </TableLayout>
    <Button
        style="@style/ovalButton_style"
        android:layout_width="match_parent"
        android:id="@+id/ok"
        android:text="OK"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>