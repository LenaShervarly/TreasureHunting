<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_centerVertical="true"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_weight="10">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:src="@drawable/trophy" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="250dp" />
    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_marginTop="250dp"
        android:id="@+id/tableLayout"
        android:textAlignment="center">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp" />
        <TableRow
            android:layout_margin="1dp">

            <EditText
                android:id="@+id/sName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#FFFF"
                android:text="Name"
                android:textSize="24dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <EditText
                android:id="@+id/sScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:text="Score"
                android:textAlignment="center"
                android:textSize="24dp" />

        </TableRow>
        <TableRow
            android:layout_margin="1dp" >

            <EditText
                android:id="@+id/sfirstName"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="top player"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/sfirstScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="final score"
                android:textSize="24sp" />
        </TableRow>
        <TableRow
            android:layout_margin="1dp">

            <EditText
                android:id="@+id/ssecondName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="second best"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ssecondScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="final score"
                android:textSize="24sp" />

        </TableRow>
        <TableRow
            android:layout_margin="1dp" >

            <EditText
                android:id="@+id/name3"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="third best"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/score3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="final score"
                android:textSize="24sp" />
        </TableRow>
        <TableRow
            android:layout_margin="1dp" >

            <EditText
                android:id="@+id/name4"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="forth best"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/score4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="final score"
                android:textSize="24sp" />
        </TableRow>
        <TableRow
            android:layout_margin="2dp" >

            <EditText
                android:id="@+id/name5"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="fifth best"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/score5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#FFFF"
                android:ems="10"
                android:hint="final score"
                android:textSize="24sp" />
        </TableRow>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp" />
    </TableLayout>


    <Button
        android:id="@+id/ok"
        style="@style/ovalButton_style"
        android:layout_width="wrap_content"
        android:text="OK"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>