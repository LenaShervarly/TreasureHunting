<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_centerVertical="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <EditText
        android:id="@+id/topTow"
        style="@style/editText_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:text="Top two players"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_above="@+id/sfirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/sfirstName"
        style="@style/editText_style"
        android:background="@drawable/edit_text_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="first name"
        android:textSize="20dp"
        android:layout_above="@+id/sfirstScore"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/sfirstScore"
        style="@style/editText_style"
        android:background="@drawable/edit_text_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="first Score"
        android:textSize="20dp"
        android:layout_above="@+id/ssecondName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/ssecondName"
        style="@style/editText_style"
        android:background="@drawable/edit_text_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="secondName"
        android:textSize="20dp"
        android:layout_above="@+id/ssecondScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <EditText
        android:id="@+id/ssecondScore"
        style="@style/editText_style"
        android:background="@drawable/edit_text_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="secondScore"
        android:textSize="20dp"
        android:layout_above="@+id/ok"
        android:layout_alignRight="@+id/ssecondName"
        android:layout_alignEnd="@+id/ssecondName" />



    <Button
        style="@style/ovalButton_style"
        android:layout_width="match_parent"
        android:id="@+id/ok"
        android:text="OK"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ssecondScore"
        android:layout_alignEnd="@+id/ssecondScore"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />



</RelativeLayout>